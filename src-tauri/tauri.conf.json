{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Beacon",
  "identifier": "dev.omni.beacon",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "https://localhost:3000",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Beacon",
        "width": 1200,
        "height": 800,
        "minWidth": 400,
        "minHeight": 300,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": []
    }
  }
}
